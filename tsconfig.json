{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true,
		"jsx": "react-jsx",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"@utils/*": ["src/utils/*"],
			"@routes/*": ["src/routes/*"],
			"@middlewares/*": ["src/middlewares/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
